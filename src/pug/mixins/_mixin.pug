mixin title(title)
    title= title

mixin slide(number)
    .slide(id= "slide-"+number)
        img.slide__img(src="./img/header-slide-"+number+".jpg", alt="slide")

mixin main-title(text)
    .main-title
        h2.main-title__text= text
        img(src='./img/title-icon.png')

mixin lg-label(text)
    .lg-label
        .lg-label__text
            h5= text
mixin sm-label(text)
    .sm-label
        .sm-label__text
            h5= text
mixin product-title(text)
    .product-title
        h2.product-title__text= text
        img.product-title__icon(src="./img/arrow.png", alt="product title")
mixin product-price(number)
    .product-price
        p= number
            sup đ
mixin btn-add-new
    .btn-add-new
        a.btn.btn--add-new Add to cart
mixin time-in-box(number, text)
    .time-in-box
        p= number
        p= text

mixin product(link, title, price, old, text)
    .product
        .product__image
            img(src=link)
        .product__title
            p= title
        .product__price
            p= price
                sup đ
            p -
            p= old
                sup đ
            +btn-add-new
        if text !== ''
            +sm-label(text)
        .product__compare
            a(href='#')
                i.fa.fa-heart
                p Yêu thích
            a(href='#')
                i.fa.fa-signal
                p So sánh
            a(href='#')
                i.fa.fa-compress


